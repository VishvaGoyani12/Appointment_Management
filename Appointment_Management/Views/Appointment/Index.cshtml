@{
    ViewData["Title"] = "Appointments";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Appointment Management</h2>
            <small class="text-muted">View, filter, and manage appointment records</small>
        </div>
        <button class="btn btn-success" id="btnAdd">
            <i class="bi bi-plus-lg me-1"></i> Add Appointment
        </button>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-funnel-fill me-2"></i>Filter Appointments
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="filterStatus" class="form-label">Status</label>
                    <select id="filterStatus" class="form-select">
                        <option value="">All</option>
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table id="appointmentTable" class="table table-hover table-bordered w-100">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div id="divModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/appointment.js"></script>
}
