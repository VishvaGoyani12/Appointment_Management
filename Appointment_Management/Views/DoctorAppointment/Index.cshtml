@{
    ViewData["Title"] = "My Appointments";
}
@await Html.PartialAsync("_ToastNotifications")

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Appointment Management</h2>
            <small class="text-muted">View, filter, and manage appointment records</small>
        </div>    
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-funnel-fill me-2"></i>Filter Appointments
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="filterStatus" class="form-label">Status</label>
                    <select id="filterStatus" class="form-select">
                        <option value="">All</option>
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <div id="statusMessage" class="alert d-none" role="alert"></div>
            <table id="doctorAppointmentsTable" class="table table-bordered table-hover w-100">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Update Status</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/doctorAppointments.js"></script>
}
