@model Appointment_Management.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    var token = ViewBag.Token as string;
}
@await Html.PartialAsync("_ToastNotifications")

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Reset Your Password</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input asp-for="Token" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="New password" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Reset Password</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" asp-controller="Account" class="small">Back to login</a>
                </div>
            </div>
        </div>
    </div>
</div>
