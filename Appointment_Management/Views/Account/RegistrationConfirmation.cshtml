@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">Registration Successful!</h4>
                </div>
                <div class="card-body text-center">
                    <p class="mb-2">A confirmation email has been sent to your email address.</p>
                    <p class="text-muted small">Please check your inbox and click the confirmation link to activate your account.</p>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
