@model Appointment_Management.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Resend Email Confirmation</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ResendEmailConfirmation" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Resend Confirmation Email</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Back to <a asp-action="Login" asp-controller="Account">Login</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
