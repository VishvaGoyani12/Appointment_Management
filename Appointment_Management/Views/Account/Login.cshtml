@model Appointment_Management.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Sign In</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>

                        <div class="d-grid mb-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="ForgotPassword" asp-controller="Account" class="small">Forgot your password?</a>
                            <br />
                            <a asp-action="ResendEmailConfirmation" asp-controller="Account" class="small">Resend Email Confirmation?</a>
                        </div>

                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Access Denied',
                        text: '@TempData["ErrorMessage"]'
                    });
                </text>
        }
    </script>
}
